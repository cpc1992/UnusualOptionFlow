<body class="d-flex text-white bg-dark vh-100">
    <div class="container d-flex p-3 flex-column">
        <header class="mb-auto">
            <div class="d-flex flex-row">
                <h3 class="me-auto mb-0">UnusualOptionsFlow</h3>
                <nav class="nav nav-masthead justify-content-center float-md-right">
                    <a class="nav-link active" aria-current="page" href="#">About</a>
                </nav>
            </div>
        </header>
        <main class="px-3 d-flex flex-column justify-content-center align-items-center">
            <div class="">
                <h1>Hello</h1>
                <p class="lead"> Welcome to Unusual Options Flow! <br> If you arrived here on purpose please enter the
                    password that Cliff gave you below

                </p>
                <form action="/auth" method="post" autocomplete="off">
                    <input type="text" autofocus class="form-control w-25 mx-auto" name="password"
                        placeholder="Open sesame" required>
                </form>

            </div>

        </main>

        <footer class="mt-auto text-white-50">
            <p>CC &copy; 2021 </p>
        </footer>


    </div>

    <!-- bootstrap 5 stuff -->
